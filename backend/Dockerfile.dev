FROM php:8.3-fpm

WORKDIR /var/www

# ğŸ§© Instala dependÃªncias do sistema e bibliotecas necessÃ¡rias
RUN apt-get update && apt-get install -y \
    git zip unzip curl \
    autoconf make gcc g++ pkg-config \
    libpng-dev libjpeg-dev libfreetype6-dev libonig-dev libxml2-dev libzip-dev \
    && docker-php-ext-configure gd --with-freetype --with-jpeg \
    && docker-php-ext-install pdo pdo_mysql gd mbstring zip exif pcntl bcmath opcache

# ğŸ Instala Xdebug (para debug local)
RUN pecl install xdebug \
    && docker-php-ext-enable xdebug

# ğŸ“¦ Copia o Composer do container oficial
COPY --from=composer:latest /usr/bin/composer /usr/bin/composer

# ğŸ“‚ Copia o cÃ³digo da aplicaÃ§Ã£o
COPY . .

# âš™ï¸ Instala dependÃªncias do Laravel
RUN composer install --no-scripts --no-interaction

# ğŸ§  Define timezone e variÃ¡veis Ãºteis
ENV TZ=America/Sao_Paulo

CMD ["php-fpm"]
